<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yuandong.ble">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" />
        <activity android:name=".DeviceDetailActivity" />
        <activity android:name=".OperateActivity" />
        <activity android:name=".statusbar.StatusBarActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".statusbar.StatusBarColorActivity" />
        <activity android:name=".statusbar.TransparentActivity" />
        <activity android:name=".statusbar.ImageViewTransparentActivity" />
        <activity android:name=".statusbar.FragmentStatusBarActivity" />
        <activity android:name=".statusbar.SwipeBackAtivity" />
        <activity android:name=".mvp.MvpTestActivity">

        </activity>
        <activity android:name=".mvp.MvpTest2Activity"></activity>
    </application>

</manifest>